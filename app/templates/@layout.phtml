	</script>
	
	<!-- NotifyBar -->
	<script type="text/javascript" src="{$basePath}/js/jquery.notifyBar.js"></script>
	<link rel="stylesheet" href="{$basePath}/css/jquery.notifyBar.css" type="text/css" />
	{if isset($notify)}
		<script language="JavaScript" type="text/javascript">
			$(function () {
			  $.notifyBar({
				cls: "{!$notify['class']}",
				html: "{!$notify['text']}",
				delay: 4000,
				animationSpeed: "normal",
				close: true
			  });  
			});
		</script>
	{/if}
</head>

<body>
	<a name="top"></a>
	{foreach $flashes as $flash}<div class="flash {$flash->type}">{$flash->message}</div>{/foreach}
	
	<div id="header">
		<h1>eWide Client</h1>
		{include #title}
		<ul id="menu">
			<li><a href="{plink Diary:default}">Diář</a></li>
			<li><a href="/clients">Klienti</a></li>
			<li><a href="{plink Overview:visits}">Schůzky</a></li>
			<li><a href="{plink Overview:orders}">Objednávky</a></li>
			<li><a href="{plink Export:default}">Export</a></li>
			<hr />
			<li class="right"><a href="{plink Login:default}">Odhlášení <img src="{$basePath}/images/icons/logout.png" alt="=>" /></a></li>
			<!--<li class="right"><a href="{plink Homepage:default}">Exportovat <img src="{$basePath}/images/icons/print.png" alt="" /></a></li>-->
			<li class="right"><a href="{plink Settings:default}">Nastavení <img src="{$basePath}/images/icons/settings.png" alt="" /></a></li>
		</ul>
		
		<ul id="submenu">
			{include #submenu}
		</ul>
	</div>
	
	<div id="content">
		{include #content}
	</div>
	
	<div id="footer">
	Copyright &copy; 2010 eWide
	<a name="bottom"></a>
	</div>
</body>
</html>
